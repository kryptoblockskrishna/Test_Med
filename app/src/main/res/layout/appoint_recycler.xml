<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rcy_pin_doc_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       android:id="@+id/rcy_pin_doc_iv1"/>
    <RelativeLayout
        android:layout_toRightOf="@id/rcy_pin_doc_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.Raman"
            android:textColor="#101010"
            android:textSize="16sp"
            android:id="@+id/rcy_pin_doc_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orthopaedic"
            android:textSize="12sp"
            android:layout_below="@id/rcy_pin_doc_name"
            android:id="@+id/rcy_pin_doc_dept"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balaji Nursing Home"
            android:textSize="12sp"
            android:layout_below="@id/rcy_pin_doc_dept"
            android:id="@+id/rcy_pin_doc_hosp"
            android:paddingBottom="2dp"/>


    </RelativeLayout>
    <TextView
        android:layout_below="@id/rcy_pin_doc_iv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/cardview_dark_background"/>
</RelativeLayout>