<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#FFDED3D3"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doc_sample"
                android:id="@+id/home_bt_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/home_bt_image"
                android:id="@+id/home_bt_title"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/home_bt_title"
                android:id="@+id/home_bt_price"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>