<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#FFDED3D3"
        android:layout_marginRight="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doc_sample"
                android:id="@+id/home_srv_rcyclr_imageview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Sampling"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_below="@+id/home_srv_rcyclr_imageview"
                android:id="@+id/home_srv_rcyclr_textview"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>