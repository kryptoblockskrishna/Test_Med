<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:gravity="center_horizontal"
    tools:context="com.transenigma.mediappb.DoctorsList"
    tools:showIn="@layout/activity_doctors_list">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:elevation="3dp"
        android:backgroundTint="#fff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:orientation="vertical"
            android:layout_marginStart="2sp"
            android:layout_marginBottom="2sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="2sp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Subrato Mondal"
                android:layout_marginLeft="2dp"
                android:id="@+id/d_list_dname"
                android:textSize="20sp"
                android:textColor="#212121"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS, FRCS"
                android:layout_marginLeft="2dp"
                android:id="@+id/d_list_deg"
                android:textSize="14sp"
                android:layout_below="@id/d_list_dname"
                android:textColor="#616161"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiac specialist, Apollo"
                android:layout_marginLeft="2dp"
                android:id="@+id/d_list_hos"
                android:textSize="14sp"
                android:layout_below="@id/d_list_deg"
                android:textColor="#616161"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon, Tue, Thu"
                android:layout_marginLeft="2dp"
                android:id="@+id/d_list_avail"
                android:textSize="16sp"
                android:layout_below="@id/d_list_hos"
                android:textColor="#2E7D32"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/doc_sample"
                android:contentDescription="Doctors Picture"
                android:background="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/d_list_docpic"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>
